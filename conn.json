{
    "log": {
        "loglevel": "warning"
    },
    "inbounds": [
        {
            "port": 2001,
            "listen": "127.0.0.1",
            "protocol": "vless",
            "settings": {
                "clients": [
                    {
                        "id": "UUID",
                        "email": "love@example.com"
                    }
                ],
                "decryption": "none"
            },
            "streamSettings": {
                "security": "none",
                "network": "h2",
                "httpSettings": {
                    "path": "VPATH",
                    "host": [
                        "HOSTDOMAIN"
                    ]
                }
            }
        }
    ],
    "outbounds": [
        {
            "tag": "direct",
            "protocol": "freedom",
            "settings": {}
        },
        {
            "tag": "blocked",
            "protocol": "blackhole",
            "settings": {}
        }
    ],
    "routing": {
        "domainStrategy": "AsIs",
        "rules": [
            {
                "type": "field",
                "outboundTag": "blocked"
            }
        ]
    }
}